{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "files": [
    "index.d.ts"
  ], //path (e.g.: "src/types/index.d.ts")
  "include": [
    "src/**/*",
    "src/db.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}